<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card_style" parent="CardView.Light">
        <item name="android:elevation" tools:ignore="NewApi">16dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">#FFFF</item>
    </style>

    <style name="card_text_style">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="title_bold">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
