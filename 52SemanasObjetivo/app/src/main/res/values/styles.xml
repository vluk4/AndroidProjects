<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card_style" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">#FFFF</item>
    </style>

    <style name="card_text_style">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="title_bold">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="chip_parceiro" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">#70C75C</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:text">@string/parceiro</item>
        <item name="android:textColor">#FFFF</item>
    </style>

    <style name="chip_text" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

</resources>
