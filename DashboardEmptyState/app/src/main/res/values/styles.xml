<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card_text">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="chip_text" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>
    <style name="chip_parceiro" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">#57C461</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:text">@string/parceiro</item>
        <item name="android:textColor">#FFFF</item>
    </style>
    <style name="chip_aguardando" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:text">@string/aguardar_dinheiro</item>
        <item name="android:textAppearance">@style/chip_text</item>
        <item name="android:textColor">#FFFF</item>
        <item name="chipBackgroundColor">#FF6F00</item>
        <item name="chipCornerRadius">13dp</item>
        <item name="chipIconSize">18sp</item>
        <item name="textEndPadding">14dp</item>
    </style>

</resources>
