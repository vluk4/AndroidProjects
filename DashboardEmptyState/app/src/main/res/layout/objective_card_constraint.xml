<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="90dp"
    android:layout_marginEnd="16dp"
    android:elevation="25dp"
    app:cardBackgroundColor="#F3F7F3"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    app:cardUseCompatPadding="false"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#00F7F2F2">

        <TextView
            android:id="@+id/casamento_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/casamento"
            android:textColor="#4C4C4C"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/semanas_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/casamento_text"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/semanas_restantes"
            android:textColor="#3D3D3D"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/casamento_text" />

        <TextView
            android:id="@+id/finaliza_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/semanas_text"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/finaliza_em"
            android:textColor="#3D3D3D"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/semanas_text" />

        <ProgressBar
            android:id="@+id/determinateBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/finaliza_text"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:progress="58"
            android:progressBackgroundTint="#79DDD8D8"
            android:progressDrawable="@drawable/curved_progress_bar"
            android:progressTint="#66AC5B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_text" />


        <TextView
            android:id="@+id/dinheiro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/determinateBar"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="R$ 957 de R$ 1000,00"
            android:textColor="#666666"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/determinateBar" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_aguardando"
            style="@style/chip_aguardando"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            app:chipIcon="@drawable/ic_sync_prancheta_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dinheiro_text" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            style="@style/chip_parceiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:chipCornerRadius="18dp"
            android:textAppearance="@style/chip_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textStartPadding="50dp" />

        <TextView
            android:id="@+id/weeks"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_below="@id/casamento_text"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/semanas_text"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/_52_semanas"
            android:textColor="#3D3D3D"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/semanas_text"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weeks"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/finaliza_text"
            android:fontFamily="@font/open_sans_semibold"
            android:text="12 de janeiro de 2019"
            android:textColor="#3D3D3D"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/finaliza_text"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="56dp"
            android:layout_height="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/chip4"
            app:layout_constraintEnd_toEndOf="@+id/chip4"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logobranco" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

