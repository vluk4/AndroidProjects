<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="180dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="#F8F3F3"
    android:elevation="10dp"
    app:cardCornerRadius="35dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_sobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_ilustras_52_semanas_02" />

        <TextView
            android:id="@+id/titulo_sobre"
            style="@style/title_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_sobre"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/sobre_title"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/descricao_sobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_sobre"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/average_sans"
            android:text="@string/descricao"
            android:textAlignment="center"
            android:textColor="#D2000000" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>