<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="last_digit_radio_button">
        <item name="android:layout_height">50dp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="month_text">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="date_style">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="colapsebar" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

</resources>
